@using Eshopping.Models

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header ">
        <a class="navbar-brand" href="/Home">EShopping</a>
    </div>
    <div>
        <ul class="nav navbar-nav">

            <li class="action"><a href="/Admin">Home</a></li>
            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Categories
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @foreach (var i in ViewBag.Category)
                    {
                        <li><a href="/Admin/New/?name=@i.Name">@i.Name</a></li>
                    }


                </ul>

            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Items
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/Item/Add">Add Items</a></li>
                    <li><a href="/Item/Delete">Delete Items</a></li>
                    <li><a href="/Item/Update">Update Items</a></li>


                </ul>
            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Users
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/User/UDetails">View User Profile</a></li>
                    <li><a href="/User/UDelete">Delete User</a></li>
                </ul>
            </li>
            <li class="action"><a href="/Item/AddC">Add Category</a></li>

            @if (Session["AdminId"] != null)
            {

                <li><a href="/Admin/SignOut">SignOut</a></li>
            }


        </ul>

    </div>
</nav>

<div class=" container">


    <div class="row">

        <div class="col-md-12">

            @foreach (var i in Model)
            {
                <div class="col-md-4">

                    <img src="@i.Image" class="thumbnail" alt="Cinque Terre" height="250" width="200">

                    <div class="panel">

                        <p>@i.Name</p>
                        <p>Rs:@i.Price</p>
                        <input type="submit" value="Details" onclick="window.location.href='/Admin/Details/@i.Id'" />
                       
                    </div>
                </div>
            }


        </div>

    </div>
</div>