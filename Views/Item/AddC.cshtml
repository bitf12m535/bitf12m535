@model Eshopping.Models.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header ">
        <a class="navbar-brand" href="/Home">EShopping</a>
    </div>
    <div>
        <ul class="nav navbar-nav">

            <li class="action"><a href="/Admin">Home</a></li>
            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Categories
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @foreach (var i in ViewBag.Category)
                    {
                        <li><a href="/Home/New/?name=@i.Name">@i.Name</a></li>
                    }


                </ul>

            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Items
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/Item/Add">Add Items</a></li>
                    <li><a href="/Item/Delete">Delete Items</a></li>
                    <li><a href="/Item/Update">Update Items</a></li>


                </ul>
            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Users
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/User/UDetails">View User Profile</a></li>
                    <li><a href="/User/UDelete">Delete User</a></li>
                </ul>
            </li>
            <li class="action"><a href="/Item/AddC">Add Category</a></li>

            @if (Session["AdminId"] != null)
            {

                <li><a href="/Admin/SignOut">SignOut</a></li>
            }


        </ul>

    </div>
</nav>

@if(Session["AdminId"] != null)
{

     <div class="container" style="margin: 10px;">
         <br />
        <div class="row">
            <h2>Add Category</h2>
        </div>
         
          

                <form role="form" action="/Item/AddCategory" method="post" >

                    <div class="form-group">
                        <div class="form-group">
                            <center>
                                <label for="firstname" class="col-md-3">
                                    Enter Category Name:
                                </label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="Name" placeholder="Enter Category Name" required>
                                </div>
                            </center>

                        </div>

                    </div>
                    <br />
                    <br />
                    <div class="row">
                        
                        <center>
                            <div class="col-md-10">
                                <input type="submit" value="Add" />

                            </div>
                        </center>
                    </div>
                </form>
            </div>
         
        

}
else
{
    <br />
    <h1>Page Not Accessable</h1>
}
