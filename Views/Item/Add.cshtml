@model Eshopping.Models.Item

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header ">
        <a class="navbar-brand" href="/Home">EShopping</a>
    </div>
    <div>
        <ul class="nav navbar-nav">

            <li class="action"><a href="/Admin">Home</a></li>
            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Categories
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @foreach (var i in ViewBag.Category)
                    {
                        <li><a href="/Home/New/?name=@i.Name">@i.Name</a></li>
                    }


                </ul>

            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Items
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/Item/Add">Add Items</a></li>
                    <li><a href="/Item/Delete">Delete Items</a></li>
                    <li><a href="/Item/Update">Update Items</a></li>


                </ul>
            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Users
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/User/UDetails">View User Profile</a></li>
                    <li><a href="/User/UDelete">Delete User</a></li>
                </ul>
            </li>

            <li class="action"><a href="/Item/AddC">Add Category</a></li>

            @if (Session["AdminId"] != null)
            {

                <li><a href="/Admin/SignOut">SignOut</a></li>
            }


        </ul>

    </div>
</nav>

@if(Session["AdminId"] != null)
{

    <div class="container" style="margin: 10px;">
        <div class="row">
            <h2>Add Item</h2>
        </div>

        <form role="form" action="/Item/AddItem" method="post" enctype="multipart/form-data">
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()


            <div class="form-group">
                <label for="name" class="col-md-2">
                    Name:
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter Item Name" })
                    @Html.ValidationMessageFor(m => m.Name)

                </div>


            </div>

            <div class="form-group">
                <label for="price" class="col-md-2">
                    Price:
                </label>
                <div class="col-md-10">
                   
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Enter Price" })
                    @Html.ValidationMessageFor(m => m.Price)
                </div>


            </div>

            <div class="form-group">
                <label for="description" class="col-md-2">
                    Description:
                </label>
                <div class="col-md-10">
                   
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Enter Description" })
                    @Html.ValidationMessageFor(m => m.Description)

                </div>


            </div>

            <div class="form-group">
                <label for="description" class="col-md-2">
                    Brand:
                </label>
                <div class="col-md-10">
                    
                    @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", placeholder = "Enter Brand Name" })
                    @Html.ValidationMessageFor(m => m.Brand)
                </div>


            </div>

            <div class="form-group">
                <label for="name" class="col-md-2">
                    Quantity:
                </label>
                <div class="col-md-10">
                   
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", placeholder = "Enter  Item Quantity" })
                    @Html.ValidationMessageFor(m => m.Quantity)

                </div>


            </div>

            <div class="form-group">
                <label for="country" class="col-md-2">
                    Category:
                </label>
                <div class="col-md-10">
                   
                    @Html.TextBoxFor(m => m.Category, new { @class = "form-control", placeholder = "Enter  Category Name" })
                    @Html.ValidationMessageFor(m => m.Category)
                </div>


            </div>


            <div class="form-group">
                <label for="uploadimage" class="col-md-2">
                    Upload Image1:
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Image, new { type = "file" })
                    @Html.ValidationMessageFor(m => m.Image)
                    <p class="help-block">
                        Allowed formats: jpeg, jpg, gif, png
                    </p>
                </div>
               
            </div>

            <div class="form-group">
                <label for="uploadimage" class="col-md-2">
                    Upload Image2:
                </label>
                <div class="col-md-10">
                   @Html.TextBoxFor(m => m.Image1, new { type = "file" })
                   @Html.ValidationMessageFor(m => m.Image1)
                    <p class="help-block">
                        Allowed formats: jpeg, jpg, gif, png
                    </p>
                </div>

            </div>

            <div class="form-group">
                <label for="uploadimage" class="col-md-2">
                    Upload Image3:
                </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Image2, new { type = "file" })
                    @Html.ValidationMessageFor(m => m.Image2)
                    <p class="help-block">
                        Allowed formats: jpeg, jpg, gif, png
                    </p>
                </div>

            </div>

           


            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-10">
                    <button type="submit" class="btn btn-info">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </div>


    }
else
{
    <br />
    <h1>Page Not Accessable</h1>
}
