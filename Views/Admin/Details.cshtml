@model Eshopping.Models.Item

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header ">
        <a class="navbar-brand" href="/Home">EShopping</a>
    </div>
    <div>
        <ul class="nav navbar-nav">

            <li class="action"><a href="/Admin">Home</a></li>
            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Categories
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @foreach (var i in ViewBag.Category)
                    {
                        <li><a href="/Admin/New/?name=@i.Name">@i.Name</a></li>
                    }


                </ul>

            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Items
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/Item/Add">Add Items</a></li>
                    <li><a href="/Item/Delete">Delete Items</a></li>
                    <li><a href="/Item/Update">Update Items</a></li>


                </ul>
            </li>

            <li class="dropdown ">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Users
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">


                    <li><a href="/User/UDetails">View User Profile</a></li>
                    <li><a href="/User/UDelete">Delete User</a></li>
                </ul>
            </li>
            <li class="action"><a href="/Item/AddC">Add Category</a></li>

            @if (Session["AdminId"] != null)
            {

                <li><a href="/Admin/SignOut">SignOut</a></li>
            }


        </ul>

    </div>
</nav>

<div class=" container">


    <div class="row">

        <div class="col-md-12">
          
            
                <div class="col-md-4">

                    <div id="myCarousel" class="carousel slide">
                        <div class=" carousel-inner">
                            <div class="item active">
                                <img src="@Model.Image" alt="Slider Image" height="250" width="200">
                            </div>
                            <div class="item ">
                                <img src="@Model.Image1" alt="Slider Image" height="250" width="200">
                            </div>
                            <div class="item ">
                                <img src="@Model.Image2" alt="Slider Image" height="250" width="200">
                            </div>
                           
                        </div>

                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel">

                        <p>Item Id:@Model.Id</p>
                        <p>Name:@Model.Name</p>
                        <p>Category:@Model.Category</p>
                        <p>Description:@Model.Description</p>
                        <p>Price:@Model.Price</p>
                        <p>Brand:@Model.Brand</p>
                       
                        <p>Quantity:@Model.Quantity</p>
                        



                        <br />
                        <p>
                            <input type="submit" value="Delete" onclick="window.location.href='/Item/DeleteItem/@Model.Id'" />
                            <input type="submit" value="Update" onclick="window.location.href='/Item/UpdateItem/@Model.Id'" />

                        </p>


                    </div>
                    
                    
                </div>
            
                    </div>
                        
        </div>

        </div>

    
